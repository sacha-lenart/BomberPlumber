#define MAP_GROUND_ID		'1' // ID des cases de type sol
#define MAP_PLAYER_ID		'2' // ID des cases foulées par des personnages
#define MAP_CRATE_ID		'3' // ID des caisses déplaçables
#define MAP_CRATE_D_ID		'4' // ID des caisses destructibles
#define MAP_BOMB_ID			'5' // ID des bombes
#define MAP_SUPERMUSHROOM_ID '6'	// ID du bonus de vitesse
#define MAP_BONUS_BOMB_ID	'7' // ID du bonus de portée
#define MAP_INVINCIBLE_ID	'8' // ID du bonus d'invincibilité
#define FILE_MAX_LENGTH		100 // Taille maximale du nom du fichier level

#define PLAYER_ANIM_DELAY	200	// Délai (ms) entre chaque frame pour le mouvement des personnages
#define PLAYER_MVT_BONUS	1.5	// Multiplicateur mouvement bonus
#define PLAYER_MVT_SPEED	1.2	// Vitesse (pixels/image) de base du personnage

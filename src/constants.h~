#define AI_BOMB_CHANCE		15

#define CRATE_ANIM_DELAY	100	//Delai (ms) entre chaque frame pour le mouvement des caisses
#define GAME_TIME			180000 	// Durée (ms) d'une partie
#define SCREEN_FRAMERATE	30	// Délai (ms) entre chaque itération de boucle principale
#define NB_BONUS			3   // Nombre de bonus
#define NEW_BONUS			20000 // Arrivée d'un nouveau bonus tous les NEW_BONUS (ms)
#define BONUS_DURATION		15000 // Durée d'un bonus (ms)

#define DURATION_CLASSEMENT 	10000 //Delai(ms) pour l'affichage du classement

